#!/usr/bin/with-contenv bash

#======================================================================================================================
# Ensure email is set
#======================================================================================================================

if [ -z "${LETS_ENCRYPT_EMAIL}" ] ; then
    echo " - LETS_ENCRYPT_EMAIL must be set before requesting SSL certificates."
    exit 1
fi


#======================================================================================================================
# Define directories
#======================================================================================================================

SSL=/ssl
SSL_CERTS=${SSL}/certs
NGINX_SITES=/sites

[[ ! -d ${SSL_CERTS} ]] && mkdir ${SSL_CERTS}

if [ "${SSL_CLEAN_INSTALL}" = "1" ] ; then 
    rm -rf ${SSL_CERTS}/*
    rm -rf ${NGINX_SITES}/*
fi


#======================================================================================================================
# Create arrays and include configuration
#======================================================================================================================

SSL_CONF=${SSL}/conf.sh
if [ ! -f ${SSL_CONF} ] ; then
    echo " - you must create ${SSL_CONF} - see ssl-conf-sample.sh."
    exit 1
fi

declare -A DOMAINS
declare -A ALIASES

source ${SSL_CONF}


#======================================================================================================================
# Check whether or not domains have been registered
#======================================================================================================================

if [ "${#DOMAINS[@]}" = "0" ] ; then
    echo " - no domains have been registered for SSL."
    exit 1
fi


#======================================================================================================================
# Set up Nginx and SSL for each primary domain
#======================================================================================================================

source /etc/functions/replace.sh

setup_nginx () {

    local DOMAIN_NAME=${1}
    local -n DOMAIN_ALIASES=${2}
    local FILE=${NGINX_SITES}/${DOMAIN_NAME}

    # check for existing configuration
    [[ -f ${FILE} ]] && return 0 || echo " - setting up nginx..."

    # setup domain
    touch ${FILE}

}

setup_ssl () {

    local DOMAIN_NAME=${1}
    local -n DOMAIN_ALIASES=${2}
    local FILE=${SSL_CERTS}/${DOMAIN_NAMED}/getssl.cfg

    # check for existing configuration
    [[ -d ${SSL_CERTS}/${DOMAIN_NAME} ]] && return 0 || echo " - setting up SSL..."

    # setup domain
    getssl -w ${SSL_CERTS} -d -q -c ${DOMAIN_NAME}

    # set default values
    local SANS=$(printf ",%s" "${DOMAIN_ALIASES[@]}")
    local ACL_DIR="'/var/www/.well-known/acme-challenge'"
    local ACL_RPT=${#DOMAIN_ALIASES[@]}+1
    local ACL=$(seq -s "${ACL_DIR} " ${ACL_REP} | sed 's/[0-9]//g')

    # replace config values with defaults
    replace "SANS" "${SANS:1}" ${FILE}
    replace "DOMAIN_CERT_LOCATION" "${SSL_CERTS}/${DOMAIN_NAME}.crt" ${FILE}
    replace "DOMAIN_KEY_LOCATION" "${SSL_CERTS}/${DOMAIN_NAME}.key" ${FILE}    
    replace_d "ACL" "(${ACL})" ${FILE}

}

echo " - setting up domains..."
for D in "${!DOMAINS[@]}" ; do
    echo " - ${D}..."
    A=${ALIASES[${D}]}
    setup_nginx ${D} A
    setup_ssl ${D} A
done
echo " - done."


#======================================================================================================================
# Set global configuration
#======================================================================================================================

echo " - setting global configuration options..."
CONFIG=${SSL_CERTS}/getssl.cfg
[[ "${LETS_ENCRYPT_LIVE}" = "1" ]] && CA="https://acme-v02.api.letsencrypt.org" || CA="https://acme-staging-v02.api.letsencrypt.org"
replace "CA" ${CA} ${CONFIG}
replace "ACCOUNT_EMAIL" ${LETS_ENCRYPT_EMAIL} ${CONFIG}
replace "RELOAD_CMD" "service nginx reload" ${CONFIG}
echo " - done."
