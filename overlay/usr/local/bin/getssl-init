#!/usr/bin/with-contenv bash

#======================================================================================================================
# Run checks
#======================================================================================================================

source /etc/functions/check.sh


#======================================================================================================================
# Set up Nginx and SSL for each primary domain
#======================================================================================================================

source /etc/functions/replace.sh

setup_nginx () {

    local DOMAIN_NAME=${1}
    local DOMAIN_ALIASES=${2}
    local FILE=${NGINX_SITES}/${DOMAIN_NAME}

    # check for existing configuration
    [[ -f ${FILE} ]] && return 0 || echo " - nginx..."

    # setup domain
    touch ${FILE}

}

setup_ssl () {

    local DOMAIN_NAME=${1}
    local DOMAIN_ALIASES=${2}
    local FILE=${SSL_CERTS}/${DOMAIN_NAME}/getssl.cfg

    # check for existing configuration
    [[ -d ${SSL_CERTS}/${DOMAIN_NAME} ]] && return 0 || echo " - SSL..."
    getssl -w ${SSL_CERTS} -c ${DOMAIN_NAME}

    # set default values
    local SANS=$(printf ",%s" ${DOMAIN_ALIASES[@]})
    local ACL_DIR="'/var/www/.well-known/acme-challenge'"
    local ACL_RPT=$((${#DOMAIN_ALIASES[@]} + 1))
    local ACL=$(seq -s "${ACL_DIR} " ${ACL_RPT} | sed 's/[0-9]//g')

    # replace config values with defaults
    replace "SANS" "${SANS:1}" ${FILE}
    replace "DOMAIN_CERT_LOCATION" "${SSL_CERTS}/${DOMAIN_NAME}.crt" ${FILE}
    replace "DOMAIN_KEY_LOCATION" "${SSL_CERTS}/${DOMAIN_NAME}.key" ${FILE}    
    replace_d "ACL" "(${ACL})" ${FILE}

}

echo " - setting up domains..."
for D in "${!DOMAINS[@]}" ; do
    echo " - ${D}..."
    A=(${ALIASES[${D}]})
    setup_nginx ${D} ${A}
    setup_ssl ${D} ${A}
done
echo " - done."


#======================================================================================================================
# Set global configuration
#======================================================================================================================

echo " - setting global configuration options..."
CONFIG=${SSL_CERTS}/getssl.cfg
[[ "${LETS_ENCRYPT_LIVE}" = "1" ]] && CA="https://acme-v02.api.letsencrypt.org" || CA="https://acme-staging-v02.api.letsencrypt.org"
replace "CA" ${CA} ${CONFIG}
replace "ACCOUNT_EMAIL" ${LETS_ENCRYPT_EMAIL} ${CONFIG}
replace "RELOAD_CMD" "service nginx reload" ${CONFIG}
echo " - done."


#======================================================================================================================
# Request certificates
#======================================================================================================================

if [ "${SSL_REQUEST_ON_STARTUP}" = "1" ] ; then
    request
fi
