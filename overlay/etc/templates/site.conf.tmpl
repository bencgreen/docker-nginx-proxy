server {
    server_name                         {{ getenv "DOMAIN_NAME" }};
    listen                              80;
    add_header                          X-Clacks-Overhead "GNU Terry Pratchett";

    include                             helpers/base.conf;
    include                             helpers/nginx-error-pages.conf;

    include                             helpers/acme-challenge.conf;

    location / {
        proxy_bind                      $server_addr;
        proxy_pass                      {{ getenv "UPSTREAM" }};
        proxy_buffering                 off;
        proxy_redirect                  off;

        include                         helpers/proxy-params.conf;
        include                         helpers/secure-headers.conf;
    }
}