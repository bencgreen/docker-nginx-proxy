#!/usr/bin/with-contenv bash

#======================================================================================================================
# Run checks
#======================================================================================================================

source /etc/getssl/inc/check.sh


#======================================================================================================================
# Request certificates for all domains
#======================================================================================================================

echo " - requesting SSL certificates..."
for D in "${!DOMAINS[@]}" ; do
    echo " - ${D}..."
    /etc/getssl/getssl -w ${SSL_CERTS} ${D}
done
echo " - done."
