#!/usr/bin/with-contenv bash

#======================================================================================================================
# Run checks
#======================================================================================================================

source ${INC}/check.sh


#======================================================================================================================
# Request certificates for all domains
#======================================================================================================================

_echo "Requesting SSL certificates..."
for D in "${!DOMAINS[@]}" ; do
    _echo " - ${D}"
    # -U stop upgrade checks
    # -w set working directory
    /etc/ssl/getssl -U -w ${SSL_CERTS} ${D}
done
_done
