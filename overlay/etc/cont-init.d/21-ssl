#!/usr/bin/with-contenv bash

set -euo pipefail


#======================================================================================================================
# Check for clean install
#======================================================================================================================

if [ "${CLEAN_INSTALL}" = "1" ] ; then

    _echo "Clean install detected..."
    _rmrf "${SSL_GLOBAL_CFG}"
    _rmrf "${SSL_CERTS}/*"
    _rmrf "${SITES}/*"
    _done

fi


#======================================================================================================================
# Run initialisation script
#======================================================================================================================

ssl-init
